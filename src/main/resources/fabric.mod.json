{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${mod_version}",
  "name": "${mod_name} [C]",
  "description": "${mod_description}",
  "authors": [
    "${mod_authors}"
  ],
  "contact": {
    "homepage": "${url_homepage}",
    "sources": "${git_sources}",
    "issues": "${git_sources}/issues"
  },
  "license": "${mod_license}",
  "icon": "logo.png",
  "environment": "*",
  "environment": "client",
  "environment": "server",
  "entrypoints": {
    "main": [
      "maven_group.maven_entrypoint"
    ],
    "modmenu": [
      "maven_group.config.ModMenuIntegration"
    ]
  },
  "accessWidener": "MOD_ID.accesswidener",
  "mixins": [
    "MOD_ID.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${fabric_loader_version}",
    "minecraft": ">=${minecraft_version}"
  },
  "recommends": {
    "modmenu": "*"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.website": "${url_homepage}"
      }
    }
  }
}
